@model List<Student_project.Model.Exams>
@{
    ViewData["Title"] = "Course";
    Layout = "~/Views/Teacher/_Layout.cshtml";
}

@section Title {
    Курси викладача 
}

<div class="inform">
    <div class="marks_inform">
        <br>
        <h2>Курси викладача - @ViewData["FullName"]</h2>
        <table>
            <tr>
                <th>Предмет</th>
                <th>Група</th>
                <th>Рік</th>
            </tr>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].Subject</td>
                    <td>@Model[i].GroupName</td>
                    <td>@Model[i].Year</td>
                </tr>
            }
        </table>
        <br>
        <br />
    </div>
</div>