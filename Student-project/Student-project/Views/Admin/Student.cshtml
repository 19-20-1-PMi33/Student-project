@model List<Student_project.Model.Students>
@using System.Linq;
@{
    Layout = "~/Views/Admin/_Layout.cshtml";
}

@section Title {
    Студенти
}

<div class="inform">

    <div class="new_student">
        <br>
        <h2>Внести студента</h2>
        <div class="text_inf">
            <p>ПІБ Студента:  </p>
            <p>Номер залікової книги:</p>
            <p>Факультет:  </p>
            <p>Кафедра: </p>
            <p>Напрям підготовки:  </p>
            <p>Группа:  </p>
        </div>

        <div class="input_inf">
            <input class="input_sur" type="text">
            <input class="input_num_book" type="text">

            <select class="input_faculty" id="faculty" name="Факультет">
                @foreach (var item in Model.Select(x=>x.Groups.Departments.Faculties).OrderBy(x=>x.Title).Distinct())
                {
                    <option>@item.Title</option>
                }
            </select>

            <select class="input_kafedra" id="kafedra" name="Кафедра">
                @foreach (var item in Model.Select(x => x.Groups.Departments).OrderBy(x=>x.Title).Distinct())
                {
                    <option>@item.Title</option>
                }
            </select>

            <input class="input_num_book" type="text">

            <select class="input_groupe" id="group" name="Група">
                @foreach (var item in Model.Select(x => x.Groups).OrderBy(x=>x.GroupName).Distinct())
                {
                    <option>@item.GroupName</option>
                }
            </select>

        </div>
        <button class="input">Внести дані</button>
        <br>
    </div>

    <div class="delete_student">
        <br>
        <h2>Видалити студента</h2>
        <div class="text_inf_del">
            <p>Факультет:  </p>
            <p>Кафедра:  </p>
            <p>Группа:  </p>
            <p>ПІБ Студента:  </p>
        </div>

        <div class="input_inf_del">

            <select class="del_faculty" name="Факультет">
                @foreach (var item in Model.Select(x => x.Groups.Departments.Faculties).OrderBy(x => x.Title).Distinct())
                {
                    <option>@item.Title</option>
                }
            </select>
            <select class="input_kafedra" id="kafedra" name="Кафедра">
                @foreach (var item in Model.Select(x => x.Groups.Departments).OrderBy(x => x.Title).Distinct())
                {
                    <option>@item.Title</option>
                }
            </select>
            <select class="del_groupe" name="Група">
                @foreach (var item in Model.Select(x => x.Groups).OrderBy(x => x.GroupName).Distinct())
                {
                    <option>@item.GroupName</option>
                }
            </select>
            <select class="del_stud" name="Студент">
                @foreach (var item in Model.OrderBy(x => x.LastName).ThenBy(x => x.FirstName).ThenBy(x => x.MiddleName).Distinct())
                {
                    <option>@item.LastName @item.FirstName @item.MiddleName</option>
                }
            </select>
        </div>
        <button class="delete">Видалити дані</button>
        <br>
    </div>
</div>