@{
    Layout = "~/Views/Admin/_Layout.cshtml";
}
@{
    Student_project.Repository.CDBContext db = new Student_project.Repository.CDBContext();
}
@section Title {
    Викладачи
}

    <div class="inform">
        <div class="new_student">
            <br>
            <h2>Внести викладача</h2>
            <div class="text_inf">
                <div class="row">
                    <div class="column">
                        <p></p>
                        <p>ПІБ&nbsp;Викладача:</p>
                        <p>Факультет:</p>
                        <p>Кафедра:</p>
                        <p>Вчена&nbsp;ступінь:</p>
                        <p>Електронна&nbsp;пошта:</p>
                    </div>
                    <div class="column1">
                        <form asp-action="AddTeacher" asp-controller="Admin" asp-antiforgery="true" method="post" id="add-teacher-form">
                            <div asp-validation-summary="All"></div>
                            <input type="text" name="FullNameAdd">

                            <select id="FacultySelectAdd1" name="FacultyAdd">
                                <option hidden selected> </option>
                                @foreach (var item in db.Faculties.OrderBy(x => x.Title).Select(x => x.Title))
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>

                            <select id="DepartmentSelect" name="DepartmentAdd">
                            </select>

                            <select class="input_academic_degree" name="StupinAdd">
                                <option hidden selected> </option>
                                <option>Асистент</option>
                                <option>Доцент</option>
                                <option>Завідувач кафедри</option>
                                <option>Професор</option>
                            </select>

                            <input class="input_email" type="text" name="EmailAdd">
                            <button class="input" type="submit" id="add-teacher-btn">Внести дані</button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
        <div class="delete_student">
            <br>
            <h2>Внести викладача</h2>
            <div class="text_inf">
                <br />
                <div class="row">
                    <div class="column">

                        <p>Факультет: </p>
                        <p>Кафедра:</p>
                        <p>ПІБ&nbsp;Викладача:</p>
                    </div>
                    <div class="column1">
                        <form asp-action="DeleteTeacher" asp-controller="Admin" asp-antiforgery="true" method="post" id="delete-teacher-form">
                            <div asp-validation-summary="All" />
                            <select id="FacultySelectDelete" name="FacultyDelete">
                                <option hidden selected> </option>
                                @foreach (var item in db.Faculties.OrderBy(x => x.Title))
                                {
                                    <option value="@item.Title">@item.Title</option>
                                }
                            </select>

                            <select id="DepartmentSelectDelete" name="DepartmentDelete">
                            </select>

                            <select id="fullNameSelect" name="TeacherIdDelete">
                            </select>

                            <button class="delete" type="submit" id="delete-teacher-btn">Видалити дані</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>